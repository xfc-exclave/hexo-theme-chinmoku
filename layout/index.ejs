<%- partial('_partial/header') %>

<!-- Banner -->
<section id="banner">
    <div class="content">
        <header>
            <h1><%- __(theme.hello.title, "<span class='theme-color'>" + theme.profile.name + "</span>") %></h1>
            <p><%- theme.hello.subtitle %></p>
        </header>
        <p><%- theme.hello.brif_intro %></p>
        <ul class="actions">
            <li>
                <a href="#" class="button big"><%= __('learn_more') %></a>
            </li>
        </ul>
    </div>
    <span class="image object">
        <img src="/images/pic02.jpg" alt="" />
    </span>
</section>

<!-- Section -->
<section>
    <header class="major">
        <h2>Features of this blog</h2>
    </header>
    <div class="features">
        <% let topics = theme.topics; %>
        <% for (let i in topics) { %>
            <article>
                <span class="icon">
                    <i class="<%= topics[i]['icon'] %>"></i>
                </span>
                <div class="content">
                    <h3><%= topics[i]['title'] %></h3>
                    <p><%= topics[i]['description'] %></p>
                </div>
            </article>
        <% } %>
    </div>
</section>

<!-- Section -->
<section>
    <header class="major">
        <h2>Recent Posts</h2>
    </header>
    <% if (page.content) { %>
        <%- page.content %>
    <% } else { %>
        <%- partial('_partial/post-list', { pagination: 2, index: true }) %>
    <% } %>
</section>